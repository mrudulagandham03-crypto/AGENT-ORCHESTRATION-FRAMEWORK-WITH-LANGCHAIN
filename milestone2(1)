import os
import requests
from dotenv import load_dotenv
from langchain.tools import tool

# Force load .env from current directory
load_dotenv(dotenv_path=".env")

OPENWEATHER_API_KEY = os.getenv("OPENWEATHER_API_KEY")
print("Loaded Key:", OPENWEATHER_API_KEY)   # <-- Debug (check if key loads)

@tool
def weather(city: str) -> str:
    """Get real weather using OpenWeatherMap API."""
    try:
        if not city:
            return "City name required."

        url = (
            f"https://api.openweathermap.org/data/2.5/weather"
            f"?q={city}&appid={OPENWEATHER_API_KEY}&units=metric"
        )

        response = requests.get(url)

        if response.status_code != 200:
            return f"Weather API error: {response.json().get('message', 'Unknown error')}"

        data = response.json()
        temp = data["main"]["temp"]
        feels = data["main"]["feels_like"]
        humidity = data["main"]["humidity"]
        condition = data["weather"][0]["description"].title()

        return (
            f"Weather in {city}:\n"
            f"- Temperature: {temp}°C\n"
            f"- Feels Like: {feels}°C\n"
            f"- Humidity: {humidity}%\n"
            f"- Condition: {condition}"
        )

    except Exception as e:
        return f"Weather tool error: {str(e)}"


@tool
def summarizer(text: str) -> str:
    """Summarize any given text."""
    if not text:
        return "Text required for summarizing."
    try:
        sentences = text.split(".")
        if len(sentences) > 2:
            return sentences[0].strip() + ". " + sentences[1].strip() + "."
        return text
    except Exception as e:
        return f"Summarizer error: {str(e)}"


if __name__ == "__main__":
    # Call tools correctly using .run()
    print(weather.run("Hyderabad"))
    print(summarizer.run("This is the first sentence. This is the second. This is the third."))
